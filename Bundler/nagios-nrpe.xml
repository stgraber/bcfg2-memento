<Bundle name='nagios-nrpe' version='2.0'>
    <!-- Generate NagiosGen config -->
    <Path name='/etc/nagiosgen.status'/>

    <Path name='/etc/nagios/nrpe.cfg'/>
    <Path name='/etc/nagios/nrpe.d'/>
    <Path name='/etc/nagios/nrpe.d/nagios-nrpe.cfg'/>
    <Path name='/etc/logaricheck/logaricheck.conf'/>

    <Path name='/etc/sudoers.d/nrpe'/>

    <Package name='nagios-nrpe-server'/>
    <Package name='nagios-plugins-basic'/>
    <Package name='nagios-plugins-stgraber.net'/>
    <Package name='logaricheck'/>

    <Service name='nagios-nrpe-server'/>

    <Group name='apt'>
        <Path name='/etc/nagios/nrpe.d/apt.cfg'/>
    </Group>

    <Group name='backuppc'>
        <Path name='/etc/nagios/nrpe.d/backuppc.cfg'/>
    </Group>

    <Group name='bcfg2'>
        <Path name='/etc/nagios/nrpe.d/bcfg2_client.cfg'/>
    </Group>

    <Group name='bonding'>
        <Path name='/etc/nagios/nrpe.d/bonding.cfg'/>
    </Group>

    <Group name='host'>
        <Path name='/etc/nagios/nrpe.d/host.cfg'/>
    </Group>

    <Group name='md-raid'>
        <Path name='/etc/nagios/nrpe.d/md-raid.cfg'/>
    </Group>

    <Group name='multipath-tools'>
        <Path name='/etc/nagios/nrpe.d/multipath-tools.cfg'/>
    </Group>

    <Group name='postgresql'>
        <Path name='/etc/nagios/nrpe.d/postgres.cfg'/>
    </Group>

    <Group name='postfix'>
        <Package name='nagios-plugins-standard'/>
        <Path name='/etc/nagios/nrpe.d/postfix.cfg'/>
    </Group>

    <Group name='tftpd-hpa'>
        <Package name='tftp-hpa'/>
        <Path name='/etc/nagios/nrpe.d/tftpd.cfg'/>
    </Group>

    <Group name='hw-vendor-hp'>
        <Path name='/etc/nagios/nrpe.d/hp.cfg'/>
    </Group>

    <Group name='ipmi'>
        <Path name='/etc/nagios/nrpe.d/ipmi.cfg'/>
    </Group>

    <Group name='livepatch'>
        <Path name='/etc/nagios/nrpe.d/livepatch.cfg'/>
    </Group>
</Bundle>
