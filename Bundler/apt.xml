<Bundle name='apt' version='2.0'>
    <Action name='apt-update'/>
    <Path name='/etc/apt/apt.conf.d/99bcfg2'/>
    <Path name='/etc/apt/sources.list.d'/>

    <Group name='apt-sourceslist'>
        <Path name='/etc/apt/sources.list'/>

        <Path name='/etc/apt/sources.list.d/stgraber.net.list'/>
        <Path name='/etc/apt/trusted.gpg.d/stgraber.net-ppa.gpg'/>
    </Group>

    <Group name='apt-unattended-upgrade'>
        <Package name='unattended-upgrades'/>
        <Action name='apt-unattended-upgrade'/>
    </Group>

    <Group name='apt-autoremove'>
        <Action name='apt-autoremove'/>
    </Group>

    <Group name='apt-clean'>
        <Action name='apt-clean'/>
    </Group>
</Bundle>
