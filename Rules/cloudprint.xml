<Rules priority="0">
    <Path name="/var/lib/cloudprint/" type="directory" mode="750"
          owner="cloudprint" group="cloudprint"/>

    <Service name="cloudprint" status="on" type="upstart" restart="true"
             install="true"/>

    <Action timing='pre' name='cloudprint-adduser' when='modified'
            command='useradd -d /var/lib/cloudprint/ -M -r -U cloudprint'
            status='ignore'/>
</Rules>
